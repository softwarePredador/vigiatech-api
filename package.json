{
  "name": "vigiatech-api",
  "version": "1.0.0",
  "description": "VigiatTech API - IoT Vibration Monitoring System with ML/LLM Integration",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "build": "npx prisma generate",
    "start:with-migrate": "npx prisma generate && npx prisma db push --force-reset && node src/index.js",
    "start:robust": "./start.sh",
    "start:simple": "node src/index.js",
    "dev": "nodemon src/index.js",
    "postinstall": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "health": "node -e \"console.log('Health check passed')\""
  },
  "keywords": [
    "iot",
    "vibration",
    "monitoring",
    "ml",
    "llm"
  ],
  "author": "VigiatTech",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "prisma": "^5.7.0",
    "nodemon": "^3.0.2"
  }
}
